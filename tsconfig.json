{
  "compilerOptions": {
    "baseUrl": "src",
    "declaration": true,
    "lib": ["es2015", "es2018", "dom", "dom.iterable"],
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": false,
    "allowUnusedLabels": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "target": "es5",
    "skipLibCheck": true
  },
  "exclude": ["dist", "node_modules", "examples"]
}
